<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_px_49">

    <LinearLayout
        android:layout_width="@dimen/dimen_px_100"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_back"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/toolbar_close_iv"
            android:layout_width="@dimen/dimen_px_20"
            android:layout_height="@dimen/dimen_px_20"
            android:src="@drawable/ic_action_close"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/toolbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="居中标题"
        android:textSize="@dimen/dimen_px_16"/>

    <View
        android:layout_width="@dimen/dimen_px_0"
        android:layout_height="@dimen/dimen_px_0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#e0e0e0"/>
</android.support.constraint.ConstraintLayout>