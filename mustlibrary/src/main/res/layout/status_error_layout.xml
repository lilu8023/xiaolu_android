<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/error_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/status_error_iv"
        android:layout_width="@dimen/dimen_px_170"
        android:layout_height="@dimen/dimen_px_135"
        android:src="@drawable/ic_status_error" />

    <TextView
        android:id="@+id/status_error_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_px_15"
        android:gravity="center"
        android:textSize="@dimen/dimen_px_16"
        android:textColor="@color/color_222222"
        tools:text="错误"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/status_error_again_tv"
        android:layout_width="@dimen/dimen_px_130"
        android:layout_height="@dimen/dimen_px_34"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_px_30"
        android:textSize="@dimen/dimen_px_16"
        android:textStyle="bold"
        android:textColor="@color/color_FF6123"
        tools:text="再试一次"/>
</LinearLayout>
