<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!--无数据图片  当切图来了请修改宽高-->
    <ImageView
        android:id="@+id/status_empty_iv"
        android:layout_width="@dimen/dimen_px_170"
        android:layout_height="@dimen/dimen_px_135"
        android:src="@drawable/ic_status_empty" />

    <TextView
        android:id="@+id/status_empty_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_px_20"
        android:gravity="center"
        android:textSize="@dimen/dimen_px_16"
        android:textColor="@color/color_222222"
        tools:text="暂无内容"/>

</LinearLayout>
